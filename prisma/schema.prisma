// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户表
model User {
  id          Int      @id @default(autoincrement())
  telegramId  BigInt   @unique @map("telegram_id")
  firstName   String?  @map("first_name")
  lastName    String?  @map("last_name")
  username    String?
  isAdmin     Boolean  @default(false) @map("is_admin")
  isActive    Boolean  @default(true) @map("is_active")
  userLevel   Int      @default(0) @map("user_level") // 0: 普通用户, 1: 付费用户, 2: VIP
  activatedAt DateTime @default(now()) @map("activated_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  collections Collection[]

  @@map("users")
}

// 合集表
model Collection {
  id              Int      @id @default(autoincrement())
  token           String   @unique // 深链 token
  title           String
  description     String?
  permissionLevel Int      @default(0) @map("permission_level") // 0: 普通用户可查看, 1: 付费用户可查看, 2: VIP可查看
  creatorId       Int      @map("creator_id")
  creator         User     @relation(fields: [creatorId], references: [id])
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  mediaFiles MediaFile[]

  @@index([creatorId])
  @@index([createdAt])
  @@index([permissionLevel])
  @@map("collections")
}

// 媒体文件表
model MediaFile {
  id              Int        @id @default(autoincrement())
  collectionId    Int        @map("collection_id")
  collection      Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  fileId          String     @map("file_id") // Telegram file_id
  uniqueFileId    String     @unique @map("unique_file_id") // 用于去重
  fileType        String     @map("file_type") // photo, video, document, audio
  permissionLevel Int        @default(0) @map("permission_level") // 0: 普通用户可查看, 1: 付费用户可查看, 2: VIP可查看
  order           Int        @default(0) // 文件顺序
  createdAt       DateTime   @default(now()) @map("created_at")

  @@index([collectionId])
  @@index([uniqueFileId])
  @@index([permissionLevel])
  @@map("media_files")
}

// 系统设置表
model Setting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("settings")
}

// 搬运任务表（用于断点续传）
model TransferTask {
  id              Int      @id @default(autoincrement())
  userId          BigInt   @map("user_id") // 发起任务的用户
  sourceChannel   String   @map("source_channel") // 源频道
  title           String   // 合集标题
  description     String?  // 合集描述
  status          String   @default("pending") // pending, running, paused, completed, failed
  totalScanned    Int      @default(0) @map("total_scanned") // 已扫描消息数
  totalMatched    Int      @default(0) @map("total_matched") // 匹配的消息数
  totalTransferred Int     @default(0) @map("total_transferred") // 已转发文件数
  lastMessageId   Int?     @map("last_message_id") // 最后处理的消息ID（用于断点续传）
  batchNumber     Int      @default(0) @map("batch_number") // 当前批次号
  config          String   @db.Text // JSON格式的完整配置
  errorMessage    String?  @map("error_message") @db.Text // 错误信息
  startedAt       DateTime? @map("started_at") // 开始时间
  completedAt     DateTime? @map("completed_at") // 完成时间
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("transfer_tasks")
}
